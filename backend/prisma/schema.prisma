generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id
  email        String   @unique
  firstName    String
  lastName     String
  role         UserRole @default(STUDENT)
  personNumber String   @unique
  phone        String
  address      String
  grades       Grade[]
  createdAt    DateTime @default(now())
}

enum UserRole {
  STUDENT
  ADMIN
}

enum GradeValue {
  A
  B
  C
  D
  F
}

model Grade {
  id        Int        @id @default(autoincrement())
  student   User       @relation(fields: [studentId], references: [id])
  studentId String
  grade     GradeValue
  year      Int
  date      DateTime
  course    Course     @relation(fields: [courseId], references: [id])
  courseId  Int

  //Improves query performance 
  @@index([studentId])
  @@index([courseId])
}

model Course {
  id     Int     @id @default(autoincrement())
  title  String  @unique
  desc   String
  grades Grade[]
}
